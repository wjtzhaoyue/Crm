<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.ContactsActivityRelationDao">
    <delete id="deleteByAids">
        delete
        from tbl_contacts_activity_relation
        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}<!--这里的cid随便起名字，但是为了方便看懂，最好还是按照一定意义去写-->
        </foreach>
    </delete>

    <select id="getCountByAids" resultType="int">
        select count(*)
        from tbl_contacts_activity_relation
        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}<!--这里的cid随便起名字，但是为了方便看懂，最好还是按照一定意义去写-->
        </foreach>
    </select>
    <delete id="Unbind" >
        delete
        from tbl_contacts_activity_relation
        where activityId=#{id}
    </delete>
    <delete id="deleteByCids" >
        delete
        from tbl_contacts_activity_relation
        where contactsId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}<!--这里的aid随便起名字，但是为了方便看懂，最好还是按照一定意义去写-->
        </foreach>
    </delete>
    <select id="getCountByCids" resultType="int">
        select count(*)
        from tbl_contacts_activity_relation
        where contactsId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}<!--这里的aid随便起名字，但是为了方便看懂，最好还是按照一定意义去写-->
        </foreach>
    </select>
    <insert id="save">
        insert  into tbl_contacts_activity_relation (id,contactsId,activityId)
        values (#{id},#{contactsId},#{activityId})
    </insert>
	
  	
</mapper>

































