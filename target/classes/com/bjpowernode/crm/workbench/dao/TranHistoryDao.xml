<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.workbench.dao.TranHistoryDao">
    <delete id="delete" >
        delete
        from tbl_tran_history
        where tranId in
        <foreach collection="array" item="tranId" open="(" close=")" separator=",">
            #{tranId}
        </foreach>
    </delete>

    <select id="getTotalById" resultType="int">
        select count(*)
        from tbl_tran_history
        where tranId in
        <foreach collection="array" item="tranId" open="(" close=")" separator=",">
            #{tranId}<!--这里的id随便起名字，但是为了方便看懂，最好还是按照一定意义去写-->
        </foreach>
    </select>
    <select id="getHistoryListById" resultType="TranHistory">
        select * from tbl_tran_history where tranId=#{tranId};
    </select>
    <insert id="save">
        insert  into  tbl_tran_history(
        id,
        stage,
        money,
        expectedDate,
        createTime,
        createBy,
        tranId

        )
        values (
        #{id},
        #{stage},
        #{money},
        #{expectedDate},
        #{createTime},
        #{createBy},
        #{tranId}
        )
    </insert>
	
  	
</mapper>

































